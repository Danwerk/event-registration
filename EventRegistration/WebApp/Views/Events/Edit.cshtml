@model App.Domain.Event

@{
    ViewData["Title"] = "Ürituse muutmine";
}

<div class="container my-2">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="row h-100" style="min-height: 100px;">
                <!-- Vasak pool -->
                <div class="col-auto d-flex align-items-center bg-darker-primary text-white px-3">
                    <h4 class="mb-0">Ürituse muutmine</h4>
                </div>

                <!-- Parem pool-->
                <div class="col p-0">
                    <img src="~/img/libled.jpg" class="img-fluid" alt="Libled"
                         style="height: 100px; width: 100%; object-fit: cover;"/>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <h4 class="text-darker-primary mb-4">Ürituse muutmine</h4>

            <!-- Vorm -->
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-sm-3 col-form-label">Ürituse nimi:</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="DateTime" class="col-sm-3 col-form-label">Toimumisaeg:</label>
                    <div class="col-sm-9">
                        <input asp-for="DateTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Location" class="col-sm-3 col-form-label">Koht:</label>
                    <div class="col-sm-9">
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="AdditionalInfo" class="col-sm-3 col-form-label">Lisainfo:</label>
                    <div class="col-sm-9">
                        <textarea asp-for="AdditionalInfo" class="form-control" rows="3" maxlength="1000"></textarea>
                        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nupud -->
                <div class="d-flex">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">Tagasi</a>
                    <button type="submit" class="btn btn-darker-primary">Salvesta</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
